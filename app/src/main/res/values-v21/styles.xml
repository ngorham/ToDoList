<resources>
    <!-- Base application theme. -->
    <style name="LightTheme" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimaryLight</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDarkLight</item>
        <item name="android:colorAccent">@color/colorAccentLight</item>
        <item name="android:textColorPrimary">@color/textPrimaryLight</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
    </style>
    <style name="DarkTheme" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccentDark</item>
        <item name="android:textColorPrimary">@color/textPrimaryDark</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>
</resources>
